@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">
                Categories
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp;Create new Category</a>

        </div>


    </div>



</div>

<h1>list of Categories</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name;
                </td>
                <td>
                    @item.DisplayOrder;
                </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                    <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>


            </tr>


        }



    </tbody>


</table>
